<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingTop="@dimen/nav_menu_vertical_margin"
    android:background="@drawable/nav_menu_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_header_height"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <ImageView
            android:id="@+id/nav_profile_config"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_profile_config"
            android:layout_margin="10dp"
            android:clickable="true" />

        <ImageView
            android:id="@+id/nav_profile_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_nav_menu"
            android:layout_margin="10dp" />

        <TextView android:id="@+id/nav_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_profile_image"
            android:layout_centerHorizontal="true"
            tools:text="Dragonfly"
            android:textAppearance="@style/TextAppearance.DragonFly.NavMenu.Text1" />

        <TextView
            android:id="@+id/nav_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nav_profile_name"
            android:layout_centerHorizontal="true"
            tools:text="dragonfly@hotmart.com.br"
            android:textAppearance="@style/TextAppearance.DragonFly.NavMenu.Text2" />

    </RelativeLayout>
</LinearLayout>